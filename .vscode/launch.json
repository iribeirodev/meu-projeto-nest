{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJS + Fastify",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": [
        "src/main.ts"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "smartStep": true,
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    }
  ]
}